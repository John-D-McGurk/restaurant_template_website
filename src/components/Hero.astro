---
import Image from "astro/components/Image.astro";

import HeroImage from "../assets/hero.png";
---
<section id="hero" class="relative">
    <div class="container flex-column align-center justify-center">
        <h1 class="serif">CULINARY EXCELLENCE</h1>
        <h2 class="hand-written">Chef Simon Holland</h2>
    </div>
<Image
  class="absolute"
  src={HeroImage}
  alt="alt"
  widths={[360, 720, HeroImage.width]}
  sizes={`(max-width: 360px) 360px, (max-width: 720px) 720px, ${HeroImage.width}px`}
  decoding="sync"
  loading="eager"/>
</section>
<style>
    #hero {
        max-width: 100%;
        overflow-x: hidden;
        color: #fff;
    }

    .container {
        height: calc(100vw / 1.47 * 1.2);
    }

    img {
        width: 140%;
        height: auto;
        top: 0;
        left: 50%;
        transform: translateX(-55%);
        z-index: -1;
    }

    h1,
    h2 {
        font-weight: unset;
    }

    h1 {
        margin: 0 0 var(--space-xs) 0;
    }
    h2 {
        margin: 0;
    }

    @media only screen and (min-width: 769px) {
        img {
           width: 100%;
        height: 100vh;
        object-fit: cover;
        transform: translateX(-50%);
        }


    .container {
        height: 100vh;
    }
    }

</style>